{
	"name": "@gikdev/tx",
	"version": "0.1.1-beta",
	"license": "MIT",
	"bin": {
		"tx": "dist/cli.js"
	},
	"type": "module",
	"description": "Helps you do tasks in tmplx projects...",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"ink": "^4.1.0",
		"pastel": "^2.0.0",
		"react": "^18.2.0",
		"zod": "^3.21.4"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.8.3",
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/react": "^18.0.32",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
		"ink-testing-library": "^3.0.0",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.3",
		"xo": "^0.54.2"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config",
	"main": "index.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/gikdev/tx-cli.git"
	},
	"keywords": [
		"cli"
	],
	"author": "gikdev",
	"bugs": {
		"url": "https://github.com/gikdev/tx-cli/issues"
